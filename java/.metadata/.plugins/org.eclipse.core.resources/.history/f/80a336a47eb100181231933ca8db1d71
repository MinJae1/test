package ch08;

public class RemoteExam {
	public static void main(String[] args) {
		RemoteControl rc;
		RemoteControl.changeBattery();

		System.out.println();

		rc = new SmartTV();
		rc.turnOn();
		rc.turnOff();
		rc.setVolume(5);
		rc.setMute(true);

		System.out.println();

		rc = new Television();
		rc.turnOn();
		rc.turnOff();
		rc.setVolume(8);
		rc.setMute(true);

		System.out.println();

		rc = new Audio();
		rc.turnOn();
		rc.turnOff();
		rc.setVolume(2);
		rc.setMute(true);
	}
}
